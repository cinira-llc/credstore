{
  "name": "@cinira-llc/credstore",
  "version": "1.0.0",
  "description": "Wrapper script for accessing the OS credential store in Linux. macOS, and Windows.",
  "homepage": "https://github.com/cinira-llc/credstore#readme",
  "bin": {
    "credstore": "dist/credstore.js"
  },
  "bugs": {
    "url": "https://github.com/cinira-llc/credstore/issues"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=22.0.0"
  },
  "files": [
    "dist",
    "CredManagerLib/bin/Release/net48"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cinira-llc/credstore.git"
  },
  "license": "MIT",
  "author": "Matt Jensen",
  "main": "dist/credstore.js",
  "scripts": {
    "build": "tsc --project tsconfig-build.json && dotnet build -c Release CredManagerLib/",
    "clean": "rm -rf ./build ./coverage ./dist ./CredManagerLib/bin ./CredManagerLib/obj",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "test": "jest"
  },
  "devDependencies": {
    "@semantic-release/exec": "^7.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "edge-js": "^24.0.4"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/@@snapshot@@/${nextRelease.version}'/g ./dist/credstore.js"
        }
      ]
    ]
  }
}
